{
  "useTabs": false,
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 100,
  "proseWrap": "preserve",
  "pluginSearchDirs": ["."],
  "semi": false,
  "singleAttributePerLine": true,

  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "svelteSortOrder": "options-scripts-styles-markup",
      }
    }
  ]
}
